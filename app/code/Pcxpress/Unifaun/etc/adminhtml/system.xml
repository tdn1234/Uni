<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <group id="unifaun" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Pcxpress Unifaun</label>
                <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1"
                       showInWebsite="1">
                    <label>General</label>
                    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="title" translate="label" type="text" sortOrder="30" showInDefault="1"
                           showInWebsite="1"
                           showInStore="1">
                        <label>Title</label>
                    </field>
                    <field id="logo" translate="label"
                           type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="30" showInDefault="1"
                           showInWebsite="1">
                        <label>Logo (for label prints)</label>
                    </field>
                    <field id="username" translate="label" type="text" sortOrder="30" showInDefault="1"
                           showInWebsite="1"
                           showInStore="1">
                        <label>Username</label>
                    </field>
                    <field id="groupname" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Group Name</label>
                    </field>
                    <field id="pacsoft_id" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Pacsoft ID</label>
                    </field>
                    <field id="pacsoft_password" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Pacsoft Secret1</label>
                    </field>
                </group>
                <group id="sectionheading_consignor" translate="label" type="text" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>CONSIGNOR CONTACT DETAILS</label>
                    <field id="consignor_name" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Name</label>
                    </field>
                    <field id="consignor_address" translate="label" type="textarea" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Address</label>
                    </field>
                    <field id="consignor_postcode" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Zip code</label>
                    </field>
                    <field id="consignor_city" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>City</label>
                    </field>
                    <field id="consignor_state" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>State/Region</label>
                    </field>
                    <field id="consignor_countrycode" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Country Code</label>
                    </field>
                    <field id="contact_person" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Contact Person</label>
                    </field>
                    <field id="phone" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Phone</label>
                    </field>
                    <field id="email" translate="label" type="text" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Email</label>
                    </field>
                </group>
                <group id="sectionheading_units" translate="label" type="text" sortOrder="2" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Measurement Units</label>
                    <field id="length" translate="label" type="select" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Length</label>
                        <source_model>Pcxpress\Unifaun\Model\Config\Source\Length</source_model>
                    </field>
                    <field id="weight" translate="label" type="select" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Weight</label>
                        <source_model>Pcxpress\Unifaun\Model\Config\Source\Weight</source_model>
                    </field>
                </group>
                <group id="sectionheading_attributes" translate="label" type="text" sortOrder="3" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Consignment Attributes</label>
                    <field id="width" translate="label" type="select" sortOrder="50" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Width</label>
                        <source_model>Pcxpress\Unifaun\Model\Config\Source\Width</source_model>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>